<% layout('layouts/boilerplate') %>

<div class="card mt-3 col-md-8 offset-2" >
    <img src="<%= blogPost.image %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= blogPost.title %></h5>
      <p class="card-text">
        <small class="text-muted">by <%= blogPost.author %></small>
      </p>
      <p class="card-text"><%= blogPost.body %></p>
      

    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a href="/blog/<%= blogPost._id %>/edit" class="btn btn-primary">Edit</a>
            <form action="/blog/<%= blogPost._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
  </div>