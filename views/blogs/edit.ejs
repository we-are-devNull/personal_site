<% layout('layouts/boilerplate') %>
<h1 class="text-center">Edit Blog</h1>
<div class="col-6 offset-3">

    <form action="/blog/<%= blogPost._id %>?_method=PUT" method="POST" class="mb-3">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" 
            id="title" name="title" aria-describedby="emailHelp" 
            value="<%= blogPost.title %>">
        </div>
        <div class=" mb-3" >
            <label for="body" class="form-label">Post body</label>
            <textarea class="form-control" 
                id="body" name="body" style="min-height: 500px;"><%= blogPost.body %></textarea>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <a href="/blog">Return to blog</a>
      </form>
    
</div>

