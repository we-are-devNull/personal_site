<% layout('layouts/boilerplate') %>
<h1 class="text-center">Edit Blog</h1>
<div class="col-md-6 offset-md-3">

    <form action="/blog/<%= blogPost._id %>?_method=PUT" enctype="multipart/form-data" method="POST" class="validated-form mb-3" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" 
            id="title" name="title" aria-describedby="emailHelp" 
            value="<%= blogPost.title %>" required>
        </div>
        <div class=" mb-3" >
            <label for="body" class="form-label">Post body</label>
            <textarea class="form-control" 
                id="body" name="body" style="min-height: 500px;" required><%= blogPost.body %></textarea>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" id="image" name="image">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <a href="/blog">Return to blog</a>
    </form>
</div>
