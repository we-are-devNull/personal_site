
<% layout('layouts/boilerplate') %>
<h1>Blog</h1>
<div>
    <a href="/blog/new">New Post</a>
</div>
<% for (let blog of blogPosts) {%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <img src="/images/<%= blog._id %>" class="img-fluid h-100">
            </div>
            <div class="col-md-8 d-flex">
                <div class="card-body h-100 d-flex flex-column ">
                    <h5 class="card-title"><%= blog.title %> </h5>
                    <p class="card-text">
                        <small class="text-muted">by <%= blog.author %></p></small> 
                    </p>
                    <p class="card-text"><div style="white-space: pre-wrap;"><%= blog.body %></div></p>
                    <div class="mt-auto text-center">
                        
                    </div>
                    <div class="mt-auto text-end">
                        <a href="/blog/<%= blog._id %>"class="btn btn-primary mt-auto">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>


